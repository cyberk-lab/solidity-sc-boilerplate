{
  "name": "solidity-sc-boilerplate",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build": "hardhat compile",
    "test": "hardhat test",
    "test:forge": "forge test -vvv",
    "test:fuzz": "forge test --match-path 'test/foundry/*.fuzz.t.sol' -vvv",
    "test:invariant": "forge test --match-path 'test/foundry/*.invariant.t.sol' -vvv",
    "coverage:forge": "forge coverage",
    "gas:forge": "forge test --gas-report",
    "lint:sol": "solhint 'contracts/**/*.sol'",
    "security:slither": "slither . --config-file slither.config.json",
    "security:all": "pnpm run security:slither && pnpm run test:fuzz && pnpm run test:invariant",
    "verify": "hardhat verify"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-ignition": "^3.0.5",
    "@nomicfoundation/hardhat-network-helpers": "^3.0.3",
    "@nomicfoundation/hardhat-toolbox-viem": "^5.0.1",
    "@nomicfoundation/hardhat-viem": "^3.0.1",
    "@nomicfoundation/hardhat-viem-assertions": "^3.0.4",
    "@nomicfoundation/ignition-core": "^3.0.6",
    "@openzeppelin/contracts": "^5.4.0",
    "@openzeppelin/contracts-upgradeable": "^5.4.0",
    "@types/lodash": "^4.17.21",
    "@types/luxon": "^3.7.1",
    "@types/node": "^22.8.5",
    "forge-std": "github:foundry-rs/forge-std#v1.9.4",
    "hardhat": "^3.0.16",
    "lodash": "^4.17.21",
    "luxon": "^3.7.2",
    "prettier": "^3.7.4",
    "prettier-plugin-solidity": "^2.2.0",
    "solhint": "^5.0.0",
    "typescript": "~5.8.0",
    "viem": "^2.30.0"
  }
}